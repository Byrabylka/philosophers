NAME = philo
CC = gcc -Ofast
CFLAGS = -Wall -Wextra -Werror
PINK = \033[1;35m
HEADER = ./incs/philo.h
SRC_PATH = ./srcs
OBJ_PATH = ./objs

SRCS = $(addprefix $(SRC_PATH)/,$(SOURCES))

SOURCES = main.c philo_manager.c utils.c

OBJS = $(addprefix $(OBJ_PATH)/,$(SOURCES:.c=.o))

$(OBJ_PATH)/%.o: $(SRC_PATH)/%.c $(HEADER) Makefile
			@mkdir -p objs
			@${CC} ${CFLAGS} -c $< -o $@

all: $(NAME)

${NAME}:${OBJS}
		@${CC} ${CFLAGS} ${OBJS} -o ${NAME}

clean:
	@rm -f ${OBJS}
	@rm -rf objs

fclean:clean
	   rm -f ${NAME}

re: fclean
	@${MAKE} all

mandelbrot:
	@echo "${PINK}	 	.............::::::::::::::::::::::::::::::::::::::::::::::::.......................$(END)"
	@echo "${PINK}		.........::::::::::::::::::::::::::::::::::::::::::::::::::::::::...................$(END)"
	@echo "${PINK}		.....::::::::::::::::::::::::::::::::::-----------:::::::::::::::::::...............$(END)"
	@echo "${PINK}		...:::::::::::::::::::::::::::::------------------------:::::::::::::::.............$(END)"
	@echo "${PINK}		:::::::::::::::::::::::::::-------------;;;!:H!!;;;--------:::::::::::::::..........$(END)"
